<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http pattern="/view/**" security="none" />

	<http pattern="/login" security="none" />

  	<http>
	
		<!-- Recursos -->
		
		<intercept-url pattern="/css/**" access="permitAll" />
		<intercept-url pattern="/js/**" access="permitAll" />
		<intercept-url pattern="/images/**" access="permitAll" />

		<!-- URLs aplicacion -->
	
		<intercept-url pattern="/login" access="permitAll"/>
		<intercept-url pattern="/" access="permitAll"/>
		<!-- <intercept-url pattern="/usuarioXestor/**" access="ROLE_ADMIN,ROLE_CONSULTA" /> -->
		<!-- <intercept-url pattern="/admin/etapa/listarEtapa" access="ROLE_XESTOR,ROLE_ADMIN" /> -->
		<!-- <intercept-url pattern="/admin/**" access="ROLE_ADMIN" /> -->
	
		<!-- <intercept-url pattern="/previsualizar/**" access="ROLE_XESTOR,ROLE_ADMIN" /> -->
	
		
        <form-login login-page="/login" default-target-url="/" login-processing-url="/procesarLogin" always-use-default-target="true"
	            	authentication-failure-url="/login?erro" />
		<logout logout-url="/sair" logout-success-url="/" />  
		<!--<anonymous />        -->
		<!--<session-management invalid-session-url="/sessionTimeout.htm" />-->
	</http>
	
	 <authentication-manager alias="managerUsuarios">
    	<authentication-provider user-service-ref="usuarioWebService">
			<password-encoder hash="md5">
				<salt-source user-property="username"/>
			</password-encoder>
    	</authentication-provider> 
     </authentication-manager>


	<!--  <beans:bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
		<beans:constructor-arg value="256" />
	</beans:bean>-->

	<beans:bean id="accessDeniedHandler"
		class="es.udc.lbd.hermes.dashboard.controller.util.security.AccessDeniedHandler" />


</beans:beans>
