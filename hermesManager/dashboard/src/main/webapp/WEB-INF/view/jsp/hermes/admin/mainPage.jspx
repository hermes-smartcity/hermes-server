<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:contido="http://www.enxenio.es/tags/contido"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:sec="http://www.springframework.org/security/tags"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt" version="2.0">


	<html xmlns="http://www.w3.org/1999/xhtml" lang="${localeActual}">
<jsp:output doctype-root-element="html"
	doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
	doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd" />

<jsp:directive.page contentType="text/html; charset=UTF-8" />

<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

<jsp:include page="../incluirAngular.jspx" />
</head>

		<fmt:message var="mapaFmt" key="citydriver.vehicleLocation.pestanas.mapa" />
		<fmt:message var="tablaFmt" key="citydriver.vehicleLocation.pestanas.tabla" />
		<fmt:message var="eventosFmt" key="citydriver.vehicleLocation.tabla.titulo.eventos" />
		<fmt:message var="idEventoFmt" key="citydriver.vehicleLocation.tabla.columnas.idEvento" />
		<fmt:message var="timestampFmt" key="citydriver.vehicleLocation.tabla.columnas.timestamp" />
		<fmt:message var="posicionFmt" key="citydriver.vehicleLocation.tabla.columnas.posicion" />
	

<!-- GestiÃ³n de angular -->
<div class="col-lg-8" ng-app="vehicleLocationApp">

	<div ng-controller="VehicleLocationsController" ng-init="getVehicleLocations()">

			<li class="pestanas pestanasFormulario">
				<ol class="pestanas selectoresFormulario">
					<li class="pestanas selector activa">${mapaFmt}</li>
					<li class="pestanas selector" id="selectorF">${tablaFmt}</li>

				</ol>
				<ol class="pestanas fichas">
					<li class="pestanas ficha activa">
						<ol>

							<div style="height: 300px;" id="map"></div>


						</ol>
					</li>
					<li class="pestanas ficha" id="pestanaF">
						<ol class="pestanas">
							<br></br>
							<h3 style="font-weight: bold;">${eventosFmt}</h3>
							<br></br>
							<table class="film-info-bottom"
								ng-repeat="vehicleLocation in vehicleLocations">
										<tr>
										<td>
											<div class="campoFicha">
												<div class="etiqueta">
													${idEventoFmt}
												</div>
												<div class="valor">
													{{vehicleLocation.eventId}}
												</div>
											</div>
										</td>
										<td>
											<div class="campoFicha">
												<div class="etiqueta">
													${timestampFmt}
												</div>
												<div class="valor">
													{{ vehicleLocation.timestamp  | date : format : timezone}}
																
												</div>
											</div>
										</td>
									
										<td>
											<div class="campoFicha">
												<div class="etiqueta">
													${posicionFmt}
												</div>
												<div class="valor">
													{{vehicleLocation.position.coordinates}}
												</div>
											</div>
										</td>
									</tr>
								</table>
						</ol>
					</li>
				</ol>
			</li>

	</div>
</div>

 </div>
        <div class="col-lg-3">
              <div class="panel panel-default">
                      <div class="panel-heading">
                          <i class="fa fa-bell fa-fw"><!--  --></i> 
                      </div>
                      <!-- /.panel-heading -->
                      <div class="panel-body">
                             <label for="singleSelect"> <!--  --></label><br/>
						    <select name="singleSelect" id="singleSelect" ng-model="data.singleSelect">
						      <option value="">---Please select---</option> <!-- not selected / blank option -->
						      <option value="{{data.option1}}">Option 1</option> <!-- interpolation -->
						      <option value="option-2">Option 2</option>
						    </select><br/>
						    <button ng-click="forceUnknownOption()">Force unknown option</button><br/>								   
                       
                      </div>
                      <!-- /.panel-body -->
                  </div>
          </div>

	</html>
</jsp:root>
