<?xml version="1.0" encoding="UTF-8"?>
<jsp:root xmlns="http://www.w3.org/1999/xhtml"
	xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:fn="http://java.sun.com/jsp/jstl/functions"
	xmlns:contido="http://www.enxenio.es/tags/contido"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:sec="http://www.springframework.org/security/tags"
	xmlns:fmt="http://java.sun.com/jsp/jstl/fmt" version="2.0">
	

<html xmlns="http://www.w3.org/1999/xhtml" lang="${localeActual}" >
	<jsp:output doctype-root-element="html"
	    doctype-public="-//W3C//DTD XHTML 1.0 Transitional//EN"
	    doctype-system="http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"/>
	    
	<jsp:directive.page contentType="text/html; charset=UTF-8"/> 
	
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
		
		<jsp:include page="../form-script.jspx" />		
	</head>
	
	<fmt:message var="mapaFmt" key="hermes.driverFeatures.pestanas.mapa" />
	<fmt:message var="tablaFmt" key="hermes.driverFeatures.pestanas.tabla" />
	<fmt:message var="eventosFmt" key="hermes.driverFeatures.tabla.titulo.eventos" />
	<fmt:message var="awakeFmt" key="hermes.driverFeatures.tabla.columnas.awakeFor" />
	<fmt:message var="inBedFmt" key="hermes.driverFeatures.tabla.columnas.inBed" />
	<fmt:message var="workingTimeFmt" key="hermes.driverFeatures.tabla.columnas.workingTime" />
	<fmt:message var="deepSleepFmt" key="hermes.driverFeatures.tabla.columnas.deepSleep" />
	
	<!-- GestiÃ³n de angular -->
 
	<div class="col-lg-8" ng-cloak="">
	
		<div ng-controller="DriversFeaturesController" ng-init="getDriversFeatures()">
			
			<table class="film-info-bottom"
				ng-repeat="driverFeatures in driversFeatures">
						<tr>
						<td>
							<div class="campoFicha">
								<div class="etiqueta">
									${awakeFmt}
								</div>
								<div class="valor">
									{{driverFeatures.awakefor}}
								</div>
							</div>
						</td>
						<td>
							<div class="campoFicha">
								<div class="etiqueta">
									${inBedFmt}
								</div>
								<div class="valor">
									{{ driverFeatures.inBed}}
												
								</div>
							</div>
						</td>
					
						<td>
							<div class="campoFicha">
								<div class="etiqueta">
									${workingTimeFmt}
								</div>
								 <div class="valor">
									{{driverFeatures.workingTime}}
								</div>
							</div>
						</td>
						<td>
							<div class="campoFicha">
								<div class="etiqueta">
									${deepSleepFmt}
								</div>
								 <div class="valor">
									{{driverFeatures.deepSleep}}
								</div>
							</div>
						</td>
					</tr>
				</table>
				
				
		</div>
	</div>

</html>	
</jsp:root>
