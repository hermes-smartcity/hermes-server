<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.spatial.dialect.postgis.PostgisDialect</property>
		<property name="show_sql">false</property>
		<property name="hibernate.format_sql">true</property>
		<property name="hibernate.use_sql_comments">false</property>
		<!-- Entidades -->
		<mapping class="es.udc.lbd.hermes.model.events.measurement.Measurement" />
		<mapping class="es.udc.lbd.hermes.model.events.vehicleLocation.VehicleLocation" />
		<mapping class="es.udc.lbd.hermes.model.events.dataSection.DataSection" />
		<mapping class="es.udc.lbd.hermes.model.usuario.Usuario" />
		<mapping class="es.udc.lbd.hermes.model.events.eventoProcesado.EventoProcesado" />
																
	</session-factory>
</hibernate-configuration> 