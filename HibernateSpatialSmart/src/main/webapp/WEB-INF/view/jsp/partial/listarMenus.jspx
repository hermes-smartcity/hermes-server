<?xml version="1.0" encoding="UTF-8"?>
<jsp:root version="2.0"
 xmlns="http://www.w3.org/1999/xhtml"
  xmlns:c="http://java.sun.com/jsp/jstl/core"
   xmlns:fmt="http://java.sun.com/jsp/jstl/fmt" 
xmlns:fn="http://java.sun.com/jsp/jstl/functions"
 xmlns:form="http://www.springframework.org/tags/form" 
 xmlns:jsaux="http://www.enxenio.es/tags/jsaux"
 xmlns:jsp="http://java.sun.com/JSP/Page">
 
  <!-- Nested node template -->
<c:url var="playImg" value="/view/imaxes/iconos/edit.png" />

<script type="text/ng-template" id="nodes_renderer2.html">
  <div class="tree-node">
    <div class="pull-left tree-handle" >
      <span class="glyphicon glyphicon-list"></span>
    </div>
    <div class="tree-node-content">
      <a class="btn btn-success btn-xs" data-nodrag="" ng-click="toggle(this)">
        <span class="glyphicon" ng-class="{
          'glyphicon-chevron-right': collapsed,
          'glyphicon-chevron-down': !collapsed
          }">
        </span>
      </a>

      <input type="text" ng-model="node.nombre"/>
		<a class="pull-right btn btn-danger btn-xs" data-nodrag="" ng-click="remove(this)"><span class="glyphicon glyphicon-remove"></span></a>
		<a class="pull-right btn  btn-xs" data-nodrag="" ui-sref="editarMenu({ idMenu: node.id})"><img style="max-height: 17px;" src="${playImg}" alt="${arrancarFmt}" /></a>
		
      
    </div>
  </div>
 
</script>

  <div class="col-sm-6">
    <h3>MenÃºs</h3>
    <div ui-tree="" id="menus-root" data-nodrop-enabled="false" data-drag-enabled="false">
      <ol ui-tree-nodes="" ng-model="menus">
        <li ng-repeat="node in menus" ui-tree-node="" ng-include="'nodes_renderer2.html'"></li>
      </ol>
    </div>
  </div>
 
 {{menus}}


</jsp:root>
